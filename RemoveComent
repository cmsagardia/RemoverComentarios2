#include <stdio.h>
#include <stdlib.h>
#include <string.h>  
#define SIZE_MAX 200

  /* run this program using the console pauser or add your own getch, system("pause") or input loop */
  

int main(int argc, char *argv[]) 
  {
    if(argc!=2){//si la cant de argumentos es diferente de 2
      printf("error en la cantida de parametros\n");//muestra error
      return 0;}//else run program
      
    FILE *arch;
      if ( !(arch=fopen(argv[1],"rt")) ){ //si no coincide el nombre del archivo con uno existente
   		printf("Error al abrir %s\n",argv[1]); //muestra error
    	return 0;}//else run program 
  
    char stringaux[SIZE_MAX];
  
    int c;

    int estado = 1; //1: Codigo - 2: Cadena de " - 3: Cadena de ' - 4: Posible - 5: Comentario de una linea -
	                  // 6: Comentario largo - 7: Posible fin

    while((c = fgetc(arch))!=EOF) //fgetc obtiene el car치cter siguiente (si est치 presente)
	 							                  //como un unsigned char convertido a int, desde el stream de entrada
								                  // apuntado por stream, y avanza el indicador de posici칩n de ficheros 
								                  //asociado al stream (si est치 definido).
    
	 {

      switch(estado)
                  {
                          case 1 :
                                  switch (c)
                                  {
                                          case '"' : 
                                                  putchar(c);
                                                  estado = 2;
                                                  break;
                                          case '\'' :
                                                  putchar(c);
                                                  estado = 3;
                                                  break;
                                          case '/' :
                                                  estado = 4;
                                                  break;
                                          default : 
                                                  putchar(c);
                                  }
                                  break;
                          case 2 :
                                  putchar(c);
                                  if (c == '"')
                                  {
                                          estado = 1;
                                  }
                                  break;
                          case 3 :
                                  putchar(c);
                                  if (c == '\'')
                                  {
                                          estado = 1;
                                  }
                                  break;
                          case 4 :
                                  switch (c)
                                  {
                                          case '"' : 
                                                  printf("/%c", c);
                                                  estado = 2;
                                                  break;
                                          case '\'' :
                                                  printf("/%c", c);
                                                  estado = 3;
                                                  break;
                                          case '/' :
                                                  estado = 5;
                                                  break;
                                          case '*' :
                                                  estado = 6;
                                                  break;
                                          default : 
                                                  printf("/%c", c);
                                                  estado = 1;
                                  }
                                  break;
                          case 5 :
                                  if (c == '\n')
                                  {
                                          putchar(c);
                                          estado = 1;              
                                  }
                                  break;
                          case 6 :
                                  if (c == '*')
                                  {
                                          estado = 7;
                                  }
                                  break;
                          case 7 :
                                  if (c == '/')
                                  {
                                          putchar(' ');
                                          estado = 1;
                                  }
                                  else
                                  {
                                          if (c != '*')
                                          {
                                                  estado = 6;
                                          }
                                  }
                                  break;
                  }
                  if (c == EOF)
                  {
                          estado = 1;
                  }
          }

          return 0;
  }
